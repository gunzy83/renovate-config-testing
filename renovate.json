{
  "baseBranches": [
    "master"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        ".*/Pulumi(\\.|\\.[a-z0-9-]*)yaml"
      ],
      "matchStrings": [
        "  [a-z][a-z.-]+:chart-version: [\"']?(?<currentValue>[^'\" ]+)[\"']? +# renovate: depName=(?<depName>[^ \\n]+) +(extractVersion=(?<extractVersion>[^\\n]+))"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver",
      "fileMatch": [
        ".*/Pulumi(\\.|\\.[a-z0-9-]*)yaml"
      ],
      "matchStrings": [
        "  [a-z][a-z.-]+:chart-version: [\"']?(?<currentValue>[^'\" ]+)[\"']? +# renovate: depName=(?<depName>[^ \\n]+) +(registryUrl=(?<registryUrl>.*))"
      ]
    }
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchDepNames": "teleport-kube-agent",
      "allowedVersions": "/^[1-9][0-9]*\\.[1-9][0-9]*\\.[0-9]+$/",
      "sourceUrl": "https://github.com/gravitational/teleport"
    },
    {
      "matchDepNames": "metrics-server",
      "sourceUrl": "https://github.com/kubernetes-sigs/metrics-server",
      "sourceDirectory": "charts/metrics-server"
    }
  ],
  "rebaseWhen": "conflicted"
}
